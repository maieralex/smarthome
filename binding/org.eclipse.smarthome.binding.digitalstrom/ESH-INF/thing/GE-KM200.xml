                <required>true</required>
            </parameter>
            <!--deviceID-->
            <parameter name="dSID" type="text">
                <label>Device ID</label>
                <description>The device identifier identifies one DigitalSTROM device.</description>
                <required>false</required>
            </parameter>
            <!--device hwInfo-->
            <parameter name="hwInfo" type="text">
                <label>Device hardware type</label>
                <description>The hardware type from this DigitalSTROM device.</description>
                <required>false</required>
            </parameter>
            <!--zone id-->
            <parameter name="zoneID" type="text">
                <label>Zone ID</label>
                <description>The DigitalSTROM device is part of this zone.</description>
                <required>false</required>
            </parameter>
            <!--groups id-->
            <parameter name="groups" type="text">
                <label>Group ID's</label>
                <description>The DigitalSTROM device is part of this user-defined or functional groups.</description>
                <required>false</required>
            </parameter>
            <!--outputmode-->
            <parameter name="outputmode" type="text">
                <label>Device Output mode</label>
                <description>The DigitalSTROM device output mode e.g. 22 = dimmable.</description>
                <required>false</required>
            </parameter>
