<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="digitalstrom"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
    xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Brightness Channel -->
    <channel-type id="brightness">
        <item-type>Dimmer</item-type>
        <label>Brightness</label>
        <description>The brightness channel allows to control the brightness of a light.
            It is also possible to switch the light on and off.
        </description>

        <config-description>
            <parameter name="lastDimValue" type="boolean" ></parameter>
        </config-description>
    </channel-type>
    <channel-type id="powerConsumption">
    	<item-type>Number</item-type>
    	<label>PowerConsumption</label>
    	<category>Energy</category>
    	<state readOnly="true" pattern="%d W"></state>
    	<config-description>
    		<parameter name="refreshTime" type="decimal">
    			<label>Sensor refresh intervall</label><description>Specifies how often you want to update the power consumption sensor value. NOTE: A too low value can disturb the DigitalSTROM system!</description>
    			<default>10000</default>
    			<required>false</required>
    		</parameter>
    		<parameter name="refreshPriority" type="text">
    			<label>label</label>
    			<description>description</description>
    			<options>
    				<option value="never">never</option>
    				<option value="high">high priority</option>
    				<option value="medium">medium priority</option>
    				<option value="low">low priority</option></options>
    			<default>high</default>
    			<required>false</required></parameter></config-description>
    </channel-type>
    <channel-type id="electricMeterValue">
    	<item-type>Number</item-type>
    	<label>ElectricMeterValue</label>
    	<category>Energy</category>
    	<state readOnly="true" pattern="%d mA"></state>
    </channel-type>
    <channel-type id="energyMeterValue">
    	<item-type>Number</item-type>
    	<label>EnergyMeterValue</label>
    	<category>Energy</category>
    	<state readOnly="true" pattern="%d Wh"></state>
    </channel-type>

</thing:thing-descriptions>
